# Environment variables for production
NODE_ENV=production

# Backend Configuration
BACKEND_PORT=5001
BACKEND_HOST=0.0.0.0

# Frontend Configuration  
FRONTEND_PORT=3001
FRONTEND_HOST=0.0.0.0

# API Base URL (for production, change to your domain)
API_BASE=https://your-domain.com/api

# File Upload Limits
MAX_FILE_SIZE=500MB
MAX_FILES=10

# Security Settings
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
CORS_ORIGIN=https://your-domain.com

# Newsletter Settings
NEWSLETTER_DATA_PATH=/app/data/newsletter.json

# Email Configuration (if you want to send actual emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Database (if you want to add database support later)
# DATABASE_URL=postgresql://user:password@localhost:5432/sharelink
